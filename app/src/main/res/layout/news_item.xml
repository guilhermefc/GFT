<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <android.support.constraint.Guideline
        android:id="@+id/idGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/idGuideline"
        tools:text="1" />

    <android.support.constraint.Guideline
        android:id="@+id/titleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/titleGuideline"
        app:layout_constraintRight_toLeftOf="@id/titleGuideline"
        app:layout_constraintStart_toStartOf="@+id/idGuideline"
        app:layout_constraintTop_toTopOf="@id/id"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam et volutpat diam." />


    <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@id/titleGuideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleGuideline"
        app:layout_constraintTop_toTopOf="@id/id"
        tools:text="Morbi blandit dolor nec velit congue, vestibulum scelerisque risus ultrices. Nunc accumsan volutpat eleifend. Fusce nisi turpis, facilisis quis luctus quis, malesuada vel ex. Fusce mollis non sapien ac maximus. Fusce porttitor tincidunt dui ut pellentesque. Praesent blandit viverra ex, sit amet pulvinar velit molestie id." />


</android.support.constraint.ConstraintLayout>